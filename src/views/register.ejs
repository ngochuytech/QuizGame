<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Trang Chủ</title>
  <link rel="stylesheet" href="/style.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
  <!-- Header -->
  <nav class="navbar fixed-top navbar-expand-lg  bg-primary-subtle">
    <div class="d-flex justify-content-between container-fluid">
      <a class="navbar-brand" href="#">QUIZ PRO</a>
    </div>
  </nav>
  <!-- End Header -->

  <!-- Form đăng kí-->
  <section class="vh-100 p-3">
    <div class="container-fluid h-custom">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-md-9 col-lg-6 col-xl-5">
          <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp" class="img-fluid"
            alt="Sample image">
        </div>
        <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
          <!-- Text đăng kí-->
          <div class="divider text-center text-uppercase fs-3 text-primary align-items-center my-4 p-5">
            <p class="text-center fw-bold mx-3 mb-0">Đăng kí</p>
          </div>
          <form action="/user/create_User" method="post">


            <!-- Tài khoản input -->
            <div data-mdb-input-init class="form-floating mb-4">
              <input name="accountName" type="text" id="form3Example3" class="form-control form-control-lg"
                placeholder="Nhập vào tên tài khoản" />
              <label class="form-label" for="form3Example3">Tên tài khoản</label>
            </div>

            <!-- Password input -->
            <div data-mdb-input-init class="form-floating mt-4">
              <input name="password" type="password" id="form3Example4" class="form-control form-control-lg"
                placeholder="Nhập vào mật khẩu" />
              <label class="form-label" for="form3Example4">Password</label>
            </div>
            <!-- Reenter password -->
            <div data-mdb-input-init class="form-floating mt-4">
              <input name="repeat_password" type="password" id="form3Example4" class="form-control form-control-lg"
                placeholder="Nhập vào mật khẩu" />
              <label class="form-label" for="form3Example4">Nhập lại password</label>
            </div>


            <!-- Nút đăng nhập và phần liên kết tới đăng kí-->
            <div class="text-center text-lg-start mt-4 pt-2">
              <button type="submit" data-mdb-button-init data-mdb-ripple-init
                class="btn btn-primary btn-lg justify-content-center"
                style="padding-left: 2.5rem; padding-right: 2.5rem;">Đăng kí</button>
            </div>

          </form>
          <div class="d-flex justify-content-between align-items-center">
            <!-- Quên mật khẩu -->
          </div>
          <div class="text-center text-lg-start mt-4 pt-2">

            <p class="small mt-2 pt-1 mb-0">Đã có tài khoản? <a href="/user/login"
                class="link-danger fw-bold">Đăng nhập</a></p>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Kết thúc form đăng nhập -->

  <!-- Import JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
    integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
    integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
    crossorigin="anonymous"></script>
</body>

</html>